pkgname=fixtime
pkgver=0.0
pkgrel=0
pkgdesc="Fix time not to go backwards across reboots."
url="https://github.org/postmarketOS"
arch="noarch"
license="MIT"
depends=""
makedepends=""
install="$pkgname.post-install $pkgname.pre-deinstall"
subpackages=""
source="fixtime.sh $install"
options=""

package() {
	install -D -m755 "$srcdir"/fixtime.sh \
		"$pkgdir"/etc/init.d/fixtime || return 1
	install -d -m755 "$pkgdir"/etc
	date "+%s" > "$pkgdir"/etc/fixtime.time
}
