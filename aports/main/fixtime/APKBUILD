pkgname=fixtime
pkgver=0.0
pkgrel=0
pkgdesc="Fix time not to go backwards across reboots."
url="https://github.org/postmarketOS"
arch="noarch"
license="MIT"
depends=""
makedepends=""
subpackages=""
source="fixtime.sh"
options=""

package() {
	install -D -m755 "$srcdir"/fixtime.sh \
		"$pkgdir"/usr/sbin/fixtime.sh || return 1
	install -d -m755 "$pkgdir"/etc
	date "+%s" > "$pkgdir"/etc/fixtime.time
}
sha512sums="31b2b0871698960c4eed9a2a72b42e9042e1537c3061092125b115dea9deb96175dd9de92d3c2fb68ea65c56aad28d2d0ad02b2acd4b494b5607c49657f23ba6  fixtime.sh"
