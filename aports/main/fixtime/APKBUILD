pkgname=fixtime
pkgver=0.0
pkgrel=0
pkgdesc="Fix time not to go backwards across reboots."
url="https://github.org/postmarketOS"
arch="noarch"
license="MIT"
depends=""
makedepends=""
install="$pkgname.post-install"
subpackages=""
source="fixtime.sh"
options=""

package() {
	install -D -m755 "$srcdir"/fixtime.sh \
		"$pkgdir"/etc/init.d/fixtime.sh || return 1
	install -d -m755 "$pkgdir"/etc
	date "+%s" > "$pkgdir"/etc/fixtime.time
}
sha512sums="40acb75b52f49bd2f5b7708d783f89536f75e5988fb3aac16b7fe2d7d183cee25c58ca63ca307ff6870132b5ab25a81b499559ede5fd2d3a83774bb6b41456a5  fixtime.sh"
