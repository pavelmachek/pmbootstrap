pkgname=postmarketos-ui-xfce4
pkgver=0.0
pkgrel=0
pkgdesc="Meta package for xfce4"
url="https://github.com/pavelmachek/xfce4-phone"
arch="noarch"
license="GPL3"
depends="xfce4 xorg-server xf86-video-vesa xf86-input-evdev xf86-input-mouse xf86-input-keyboard udev xinput"
makedepends=""
install="$pkgname.post-install"
subpackages=""
source="start_xfce4.sh $install {pkgname}-${pkgver}-${pkgrel}.tar.gz::https://github.com/pavelmachek/${pkgname}/archive/${pkgver}.tar.gz"
# g/tui/ofone/config.n900/xfce4/xfconf/xfce-perchannel-xml/
options="!check"

package() {
	install -D -m644 "$srcdir"/start_xfce4.sh \
		"$pkgdir"/etc/profile.d/start_xfce4.sh || return 1
	USER="$pkgdir"/home/user
	ASUSER="-D -m644 -o user"
	cp -a "${srcdir}/${pkgname}-${pkgver}"/config "${USER}"/.config
	chown -R user $USER
}
