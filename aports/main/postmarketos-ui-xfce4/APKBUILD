pkgname=postmarketos-ui-xfce4
pkgver=0
pkgrel=0
pkgdesc="Meta package for xfce4"
url="https://github.com/postmarketOS"
arch="noarch"
license="GPL3"
depends="xfce4 xorg-server xf86-video-vesa xf86-input-evdev xf86-input-mouse xf86-input-keyboard udev xinput"
makedepends=""
install="$pkgname.post-install"
subpackages=""
source="start_xfce4.sh xfwm4.xml xfce4-panel.xml $install"
options="!check"

package() {
	install -D -m644 "$srcdir"/start_xfce4.sh \
		"$pkgdir"/etc/profile.d/start_xfce4.sh || return 1
	USER="pkgdir"/home/user
	ASUSER="-D -m644 -o user"
	install $ASUSER "$srcdir"/xfwm4.xml $USER/.config/xfce4/xfconf/xfce-perchannel-xml/xfwm4.xml
 	install $ASUSER "$srcdir"/xfce4-panel.xml $USER/.config/xfce4/xfconf/xfce-perchannel-xml/xfce4-panel.xml
}
